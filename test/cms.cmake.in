
execute_process(COMMAND @CMAKE_COMMAND@ -E copy_directory @CMAKE_SOURCE_DIR@/openssl/test/smime-certs @CMAKE_CURRENT_BINARY_DIR@/smime-certs
                WORKING_DIRECTORY @CMAKE_CURRENT_BINARY_DIR@
                COMMAND_ERROR_IS_FATAL ANY
)

# we need our modified version of cms-test.pl for killing "../util/shlib_wrap.sh" dependency
execute_process(COMMAND @CMAKE_COMMAND@ -E copy @CMAKE_SOURCE_DIR@/test/cms-test.pl @CMAKE_CURRENT_BINARY_DIR@/cms-test.pl
                WORKING_DIRECTORY @CMAKE_CURRENT_BINARY_DIR@
                COMMAND_ERROR_IS_FATAL ANY
)

execute_process(COMMAND @CMAKE_COMMAND@ -E copy @CMAKE_SOURCE_DIR@/openssl/test/smcont.txt @CMAKE_CURRENT_BINARY_DIR@/smcont.txt
                WORKING_DIRECTORY @CMAKE_CURRENT_BINARY_DIR@
                COMMAND_ERROR_IS_FATAL ANY
)

execute_process(COMMAND @PERL_EXECUTABLE@ @CMAKE_CURRENT_BINARY_DIR@/cms-test.pl
                WORKING_DIRECTORY @CMAKE_CURRENT_BINARY_DIR@
                COMMAND_ERROR_IS_FATAL ANY
)

execute_process(COMMAND @CMAKE_COMMAND@ -E rm -f cms-test.pl smcont.txt
                WORKING_DIRECTORY @CMAKE_CURRENT_BINARY_DIR@
)

execute_process(COMMAND @CMAKE_COMMAND@ -E rm -rf smime-certs
                WORKING_DIRECTORY @CMAKE_CURRENT_BINARY_DIR@
)
